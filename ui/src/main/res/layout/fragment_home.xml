<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="homeView"
            type="com.example.there.flextube.home.HomeView" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".home.HomeFragment">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="@{(safeUnbox(homeView.state.homeItems.size()) > 0) ? View.GONE : View.VISIBLE}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/home_items_recycler_view"
            itemDecoration="@{homeView.itemDecoration}"
            onScrollListener="@{homeView.onScrollListener}"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:adapter="@{homeView.adapter}"
            android:focusable="false"
            android:focusableInTouchMode="true"
            app:layout_constraintBottom_toTopOf="@id/loading_more_progress_bar"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="spread_inside" />

        <ProgressBar
            android:id="@+id/loading_more_progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:visibility="@{(safeUnbox(homeView.state.homeItems.size()) > 0 &amp;&amp; safeUnbox(homeView.state.isLoadingInProgress)) ? View.VISIBLE : View.GONE}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/home_items_recycler_view" />

    </android.support.constraint.ConstraintLayout>


</layout>

