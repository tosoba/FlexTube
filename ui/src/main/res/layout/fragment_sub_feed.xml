<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <import type="android.view.View" />

        <variable
            name="subFeedView"
            type="com.example.there.flextube.subfeed.SubFeedView" />
    </data>

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".subfeed.SubFeedFragment">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="@{(safeUnbox(subFeedView.state.videos.size()) > 0) ? View.GONE : View.VISIBLE}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/sub_buttons_recycler_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:adapter="@{subFeedView.subscriptionsAdapter}"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/videos_recycler_view"
            itemDecoration="@{subFeedView.videosItemDecoration}"
            onScrollListener="@{subFeedView.onVideosScrollListener}"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:adapter="@{subFeedView.videosAdapter}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/sub_buttons_recycler_view" />

    </android.support.constraint.ConstraintLayout>
</layout>

