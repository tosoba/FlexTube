<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="groupView"
            type="com.example.there.flextube.groups.group.GroupView" />
    </data>

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".groups.group.GroupFragment">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/group_sub_buttons_recycler_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:adapter="@{groupView.subscriptionsAdapter}"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/group_videos_recycler_view"
            itemDecoration="@{groupView.itemDecoration}"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:adapter="@{groupView.videosAdapter}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/group_sub_buttons_recycler_view" />

    </android.support.constraint.ConstraintLayout>
</layout>

